<?xml version="1.0" encoding="utf-8"?>

<AbsoluteLayout android:id="@+id/AbsoluteLayout01" 
	xmlns:android="http://schemas.android.com/apk/res/android" 
	android:background="@drawable/bg" android:layout_width="800px" android:layout_height="427px">


<Gallery xmlns:android="http://schemas.android.com/apk/res/android" 
    android:id="@+id/gallery"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_x="0px" android:layout_y="225px"
/>

<ImageView android:id="@+id/ImageView01" 
	android:layout_width="wrap_content" 
	android:background="@drawable/arrow_left" 
	android:clickable="true" 
	android:layout_x="0dip" 
	android:layout_height="wrap_content" 
	android:baselineAlignBottom="true" android:layout_y="300px">
</ImageView>

<ImageView android:id="@+id/ImageView01" 
	android:layout_width="wrap_content" 
	android:clickable="true" 
	android:layout_height="wrap_content" 
	android:baselineAlignBottom="true" 
	android:background="@drawable/arrow_right" 
	android:adjustViewBounds="false" android:layout_x="747dip" android:layout_y="300px">
</ImageView>

<TextView android:id="@+id/tvWeather" android:layout_width="wrap_content"
	android:layout_height="wrap_content" android:text=" "
	android:layout_x="37px" android:layout_y="37px" />

<TextView android:id="@+id/tvWeather2" android:layout_width="wrap_content"
	android:layout_height="wrap_content" android:text=" "
	android:layout_x="37px" android:layout_y="200px" />

<RelativeLayout android:id="@+id/RelativeLayout01" android:layout_width="fill_parent" android:layout_height="fill_parent">

<TextView android:id="@+id/tvSpeed" android:layout_width="wrap_content"
	android:layout_height="wrap_content" android:text="50"
	android:textSize="100sp"
	android:textStyle="bold"
	android:layout_centerHorizontal="true" android:paddingTop="100px"
	android:textColor="#ffffff"
	android:shadowColor="#000000"
	android:shadowDx="0.0"
	android:shadowDy="0.0"
	android:shadowRadius="3.0"
	/>
	 
<TextView android:id="@+id/tvSpeedLabel" android:layout_width="wrap_content"
	android:layout_height="wrap_content" android:text="km/h"
	android:textSize="20sp"
	android:textStyle="bold"
	android:gravity="center_horizontal" android:layout_centerHorizontal="true" android:shadowColor="#000000"
	android:shadowDx="0.0"
	android:shadowDy="0.0"
	android:shadowRadius="3.0"
	android:paddingTop="210px"/>

<ImageView android:id="@+id/ivSpeedLimit" 
	android:src="@drawable/speed_50k" 
	android:clickable="true" 
	android:scaleType="fitXY" 
	android:layout_height="140px" 
	android:layout_width="140px" 
	android:layout_x="40px" 
	android:layout_y="50px" android:layout_alignParentRight="true" android:layout_marginTop="50px" android:layout_marginRight="40px" android:padding="10px">
</ImageView>
	
</RelativeLayout>

<RelativeLayout android:id="@+id/RelativeLayout02" android:layout_width="280px" android:layout_height="250px">

<TextView android:id="@+id/tvTemp" 
	android:layout_width="wrap_content"
	android:layout_alignParentRight="true"
	android:textSize="50px" android:textStyle="bold"
	android:layout_marginTop="100px"
	android:shadowColor="#000000"
	android:shadowDx="0.0"
	android:shadowDy="0.0"
	android:shadowRadius="3.0" android:gravity="fill_vertical|fill_horizontal" android:layout_height="wrap_content" android:text="N/A"/>

<TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
	android:layout_alignParentRight="true" android:id="@+id/tvCondition"
	android:textSize="20px" android:layout_below="@id/tvTemp" android:text="No Connection"/>

<TextView android:layout_width="wrap_content"
	android:textStyle="bold"
	android:id="@+id/tvCity" android:layout_alignParentRight="true" android:layout_below="@+id/tvCondition" android:textSize="30px" android:paddingLeft="4px" android:text="City" android:layout_centerVertical="true" android:layout_height="wrap_content"/>


</RelativeLayout>




