<TextView android:id="@+id/tvAppName" android:layout_width="wrap_content"
	android:layout_height="wrap_content" android:text=" "
	android:layout_x="440px" android:layout_y="325px"
	android:textStyle="bold"
	android:textColor="#FFFFFF"
	android:textSize="40sp"
	android:shadowColor="#000000"
	android:shadowDx="0.0"
	android:shadowDy="0.0"
	android:shadowRadius="3.0"
	 /><RelativeLayout android:id="@+id/RelativeLayout03" android:layout_width="280px" android:layout_height="250px" android:layout_x="520px">

<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="50px" android:textStyle="bold" android:layout_marginTop="100px" android:id="@+id/tvLimit" android:text="Limit" />

<TextView android:layout_width="wrap_content"
	android:layout_height="wrap_content" android:textSize="20px"
	android:id="@+id/tvStreetName" android:layout_below="@id/tvLimit"
	android:text="Street Address" android:paddingLeft="4px"
	android:shadowColor="#000000" android:shadowDx="0.0" android:shadowDy="0.0"
	android:shadowRadius="3.0" />

<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:textStyle="bold" android:id="@+id/tvSuburb" android:text="Suburb" android:layout_below="@+id/tvStreetName" android:textSize="30px" android:paddingLeft="4px" />

</RelativeLayout>

<ImageView android:id="@+id/ivWeather" 
	android:clickable="true" 
	android:scaleType="fitXY" android:layout_height="140px" android:layout_width="140px" android:layout_x="40px" android:layout_y="50px" android:src="@drawable/weather_not_available">
</ImageView>



</AbsoluteLayout>
